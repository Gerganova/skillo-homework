import java.util.Scanner;
public class WeekDays {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Get user input
        System.out.print("Enter a number from 1 to 7: ");
        int dayNumber = scanner.nextInt();

        String suffix;
        String dayName;

        // Determine suffix
        if (dayNumber == 1) {
            suffix = "st";
        } else if (dayNumber == 2) {
            suffix = "nd";
        } else if (dayNumber == 3) {
            suffix = "rd";
        } else if (dayNumber >= 4 && dayNumber <= 7) {
            suffix = "th";
        } else {
            System.out.println("Invalid input! Please enter a digit between 1 and 7.");
            scanner.close();
            return;
        }

        // Determine day of the week
        if (dayNumber == 1) {
            dayName = "Monday";
        } else if (dayNumber == 2) {
            dayName = "Tuesday";
        } else if (dayNumber == 3) {
            dayName = "Wednesday";
        } else if (dayNumber == 4) {
            dayName = "Thursday";
        } else if (dayNumber == 5) {
            dayName = "Friday";
        } else if (dayNumber == 6) {
            dayName = "Saturday";
        } else {
            dayName = "Sunday";
        }

        // Final output
        System.out.println(dayNumber + suffix + " day of the week is " + dayName);

        scanner.close();
    }
}
